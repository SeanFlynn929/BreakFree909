<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/done5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
        android:id="@+id/relativeHelper"
        android:layout_width="30dp"
        android:layout_height="1dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Motivation"
            android:textColor="#484848"
            android:textSize="36sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="316dp"
            android:layout_height="419dp"
            android:layout_below="@id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <Button
            android:id="@+id/button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button2"
            android:layout_marginBottom="50dp"
            android:text="Next Quote" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:layout_centerHorizontal="true"
            android:text="ScoreBoard"
            android:textColor="#484848"
            android:textSize="27sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:layout_alignRight="@id/horizontalBar"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Addiction"
            android:textColor="#484848"
            android:textSize="24dp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/meScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Score"
            android:layout_alignLeft="@id/horizontalBar"
            android:layout_below="@id/horizontalBar"
            android:textColor="#484848"
            app:fontFamily="serif"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addictionScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/horizontalBar"
            android:layout_alignRight="@id/horizontalBar"
            android:text="AddictScore"
            app:fontFamily="serif"
            android:textColor="#484848"
            android:textSize="24dp"
            android:textStyle="bold" />

        <View

            android:id="@+id/horizontalBar"
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_below="@id/textView14"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="#484848" />

        <View
            android:id="@+id/verticalBar"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_below="@id/textView14"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="#484848"
            android:rotation="90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:layout_alignLeft="@id/horizontalBar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Me"
            android:textColor="#484848"
            android:textSize="24dp"
            android:textStyle="bold"
            app:fontFamily="serif" />


        <com.jjoe64.graphview.GraphView
            android:id="@+id/dotGraph"
            android:layout_width="300dp"
            android:layout_height="165dp"
            android:layout_below="@id/verticalBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="212dp"/>




    </RelativeLayout>

</ScrollView>
